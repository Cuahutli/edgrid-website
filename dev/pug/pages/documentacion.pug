extends ../config/template
append config
  -title = "EDgrid | Documentación"
  -description = "Puede usar EDgrid con CSS y Sass."
  -ogUrl= "/documentacion.html"

block main
  .main-banner.main-banner--secondary
    .ed-container
      .ed-item.l-75.to-center
        img(alt="" src="images/docs-banner.jpg").main-banner__img
        .main-banner__data
          h1 Documentación de EDgrid
          p.subtitle EDgrid es muy fácil de aprender, en treinta minutos estará usándolo en sus proyectos.
  .ed-container.main-section
    include ../includes/docs-menu
    main(itemscope itemprop="mainContentOfPage" role="main").ed-item.l-75.main-main
      include:markdown-it(html) ../../md/docs/documentacion.md
