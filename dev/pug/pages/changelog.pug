extends ../config/template
append config
  -title = "EDgrid | Changelog"
  -description = "Registro de cambios que ha tenido la librería EDgrid."
  -ogUrl = "/changelog.html"

block main
  .main-banner--dark.main-banner
    .ed-container
      .ed-item.l-75.to-center
        img(alt="" src="https://static.pexels.com/photos/574073/pexels-photo-574073.jpeg").main-banner__img
        .main-banner__data
          h1 Changelog
          p.subtitle Historial del registro de cambios de las versiones de EDgrid
  .ed-container.main-section
    .ed-item
      ul.data-list
        li
          p.strong Mixin grid con CSS grid
          a(href="https://github.com/escueladigital/EDgrid/releases/tag/v2.0.2" itemprop="url" target="_blank").button.small Descargar versión
        li
          p.strong EDgrid v2.0.0
          a(href="https://github.com/escueladigital/EDgrid/releases/tag/v2.0.0" itemprop="url" target="_blank").button.small Descargar versión
